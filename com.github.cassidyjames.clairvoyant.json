{
  "app-id": "com.github.cassidyjames.clairvoyant",
  "runtime": "org.gnome.Platform",
  "runtime-version": "47",
  "sdk": "org.gnome.Sdk",
  "command": "com.github.cassidyjames.clairvoyant",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri"
  ],
  "modules": [
    {
      "name": "libportal",
      "buildsystem": "meson",
      "config-opts": [
        "-Ddocs=false",
        "-Dbackend-gtk4=enabled"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/flatpak/libportal.git",
          "tag": "0.8.1",
          "commit": "26c15008cbe579f57f89468384f8efc033f25f6f",
          "x-checker-data": {
            "type": "git",
            "tag-pattern": "^([\\d.]+)$"
          }
        }
      ]
    },
    {
      "name": "clairvoyant",
      "buildsystem": "meson",
      "run-tests": true,
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ]
    }
  ]
}
